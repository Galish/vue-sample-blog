{
    "parser": "vue-eslint-parser",
    "parserOptions": {
        "parser": "babel-eslint",
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "env": {
        "browser": true
    },
    "plugins": [
        "html"
    ],
    "rules": {
        "max-len": [
            1,
            120,
            2,
            { ignoreComments: true }
        ],
        "no-console": 0,
        "indent": [ 1, "tab" ],
        "space-in-parens": 0,
        "object-curly-spacing": 1,
        "one-var": 0,
        "computed-property-spacing": 1,
        "array-bracket-spacing": 1,
        "linebreak-style": 0,
        "semi": 0,
        "no-mixed-spaces-and-tabs": 1,
        "vue/html-indent": [ 1, "tab" ],
        "vue/script-indent": [ 1, "tab" ],
        "vue/attribute-hyphenation": [ 0, "never"]

    },
    "root": true,
    "extends": [
        "eslint:recommended",
        "plugin:vue/recommended",
        "idiomatic"
    ],
}
